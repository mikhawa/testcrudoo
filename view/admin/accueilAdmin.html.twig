{% block milieu %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration</h1>
                <p class="lead">Administration des articles de TestCrudOO</p>
            </div>
            <div class="col-lg-10 text-left">
               {# CRUD complet des articles#}
               {% for article in allArticles %}
                   <h4>{{ article.jillianarticletitre }} | <a href="?update={{ article.idjillianarticle }}">Modifier</a> | <a href="?delete={{ article.idjillianarticle }}">Supprimer</a></h4> <hr>           
                   {% else %}
                       <h3>Pas encore d'article</h3>                     
                {% endfor %}
            </div>
        </div>
</main>

{% endblock %}

